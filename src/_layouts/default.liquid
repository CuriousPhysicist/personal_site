<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nova+Oval">

  </head>
  <body class="bg-amber-50 {{ data.layout }} {{ data.page_class }}">
    <div class="max-w-5xl min-h-screen mx-auto my-2">
      {% render "navbar", metadata: site.metadata, resource: resource %}

      <main class="flex flex-col mx-auto space-y-6 place-items-center">
        {{ content }}
      </main>

      {% render "footer", metadata: site.metadata %}
    </div>
  </body>
</html>
